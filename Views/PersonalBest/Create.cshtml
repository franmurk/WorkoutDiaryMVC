@model WorkoutDiaryMVC.Models.PersonalBest

@{
    ViewData["Title"] = "Add Personal Best";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold mb-4">Add Personal Best</h2>

<form asp-action="Create" method="post" class="mb-5">
    <div class="mb-3">
        <label class="form-label">Exercise</label>
        <input asp-for="Exercise" class="form-control" placeholder="e.g. Bench Press" />
        <span asp-validation-for="Exercise" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Max Weight (kg)</label>
        <input asp-for="MaxWeight" type="number" class="form-control" />
        <span asp-validation-for="MaxWeight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Date</label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Record</button>
    <a href="/PersonalBest/Records" class="btn btn-secondary ms-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
